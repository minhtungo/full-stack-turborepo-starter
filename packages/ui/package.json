    "@typescript-eslint/parser": "^7.5.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^9",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "postcss": "^8.4.33",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.15",
    "tsup": "^8.1.0",
